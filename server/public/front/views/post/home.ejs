<% include ./layout/partials/header.ejs %>

<main class="login-screen">
    <div class="login-center">
        <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12 min-height">
            <h1 class="col-xs-12 text-center"><%- texts['TITLE'] %></h1>
            <div class="col-xs-10 col-md-10 col-xs-offset-1 col-md-offset-1 minus-padding">
                <div class="login text-center" id="card">
                    <div class="front signin_form">
                        <p>Login Your Account</p>
                        <form class="login-form">
                            <div class="form-group">
                                <div class="input-group input-relative">
                                    <input type="text" class="form-control border-dark newClass"
                                           placeholder="Type your login">
                                    <span class="input-group-addon border-dark-addon">
                                        <i class="glyphicon glyphicon-user"></i>
                                    </span>
                                    <p class="text-danger error-message"></p>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group input-relative">
                                    <input type="password" class="form-control border-dark"
                                           placeholder="Type your password">
                                    <span class="input-group-addon border-dark-addon">
                                        <i class="glyphicon glyphicon-lock"></i>
                                    </span>
                                    <p class="text-danger error-message"></p>
                                </div>
                            </div>
                            <div class="body-checkbox">
                                <input type="checkbox" class="checkbox" id="remember-me">
                                <label for="remember-me">Remember me</label>
                            </div>
                            <div class="form-group sign-btn">
                                <input type="submit" class="btn" value="Log in">
                                <p class="sign-up">
                                    <a href="#" class="forgot pull-left">Forgot password ?</a>
                                    <a href="/signUp" id="flip-btn" class="signup signup_link pull-right">
                                        Sign up
                                    </a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% include ./layout/partials/copyRight.ejs %>
</main>
<% include ./layout/partials/script.ejs %>
<% include ./layout/partials/footer.ejs %>
