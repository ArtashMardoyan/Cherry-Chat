<% include ./layout/partials/header.ejs %>

<main class="register-screen">
    <div class="register-center">
        <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12 min-height">
            <h1 class="col-xs-12 text-center"><%- texts['TITLE'] %></h1>
            <div class="col-xs-10 col-md-10 col-xs-offset-1 col-md-offset-1 minus-padding">
                <div class="login text-center" id="card">
                    <div class="front signin_form">
                        <p>Register with a new account</p>
                        <form class="login-form">
                            <div class="form-group col-sm-6 col-xs-12">
                                <div class="input-group input-relative">
                                    <input type="text" class="form-control border-dark"
                                           placeholder="Full name">
                                    <span class="input-group-addon border-dark-addon">
                                        <i class="glyphicon glyphicon-user"></i>
                                    </span>
                                    <p class="text-danger error-message"></p>
                                </div>
                                <div class="input-group input-relative">
                                    <input type="text" class="form-control border-dark"
                                           placeholder="Email">
                                    <span class="input-group-addon border-dark-addon">
                                        <i class="glyphicon glyphicon-envelope"></i>
                                    </span>
                                    <p class="text-danger error-message"></p>
                                </div>
                                <div class="input-group input-relative">
                                    <select name="gender" class="form-control border-dark">
                                        <option>male</option>
                                        <option>female</option>
                                    </select>
                                    <span class="input-group-addon border-dark-addon">
                                        <i class="fa fa-venus-mars"></i>
                                    </span>
                                    <p class="text-danger error-message"></p>
                                </div>
                            </div>
                            <div class="form-group col-sm-6 col-xs-12">
                                <div class="input-group input-relative">
                                    <input type="password" class="form-control border-dark"
                                           placeholder="Password">
                                    <span class="input-group-addon border-dark-addon">
                                        <i class="glyphicon glyphicon-lock"></i>
                                    </span>
                                    <p class="text-danger error-message"></p>
                                </div>
                                <div class="input-group input-relative">
                                    <input type="text" class="form-control border-dark"
                                           placeholder="Repeat password">
                                    <span class="input-group-addon border-dark-addon">
                                        <i class="glyphicon glyphicon-lock"></i>
                                    </span>
                                    <p class="text-danger error-message"></p>
                                </div>
                                <div class="input-group input-relative">
                                    <select name="year" class="form-control border-dark year-select">
                                        <option>1991</option>
                                        <option>1992</option>
                                        <option>1993</option>
                                        <option>1994</option>
                                        <option>1995</option>
                                        <option>1996</option>
                                        <option>1997</option>
                                    </select>
                                    <select name="mount" class="form-control border-dark mount-select">
                                        <option>January</option>
                                        <option>February</option>
                                        <option>March</option>
                                        <option>April</option>
                                        <option>May</option>
                                        <option>June</option>
                                        <option>July</option>
                                        <option>August</option>
                                        <option>September</option>
                                        <option>October</option>
                                        <option>November</option>
                                        <option>December</option>
                                    </select>
                                    <select name="day" class="form-control border-dark day-select">
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                        <option>6</option>
                                        <option>7</option>
                                        <option>8</option>
                                        <option>9</option>
                                        <option>10</option>
                                        <option>11</option>
                                        <option>12</option>
                                        <option>13</option>
                                        <option>14</option>
                                        <option>15</option>
                                        <option>16</option>
                                        <option>17</option>
                                        <option>18</option>
                                        <option>19</option>
                                        <option>20</option>
                                        <option>21</option>
                                        <option>22</option>
                                        <option>23</option>
                                        <option>24</option>
                                        <option>25</option>
                                        <option>26</option>
                                        <option>27</option>
                                        <option>28</option>
                                        <option>29</option>
                                        <option>30</option>
                                        <option>31</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group sign-btn col-xs-12">
                                <input type="submit" class="btn" value="Sing in">
                                <p class="sign-up">
                                    <a href="/" id="flip-btn" class="signup signup_link pull-right">
                                        Log in
                                    </a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

<% include ./layout/partials/footer.ejs %>