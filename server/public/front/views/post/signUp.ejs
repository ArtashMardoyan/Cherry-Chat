<% include ./layout/partials/header.ejs %>

<main class="register-screen">
    <div class="register-center">
        <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12 min-height">
            <h1 class="col-xs-12 text-center"><%- texts['TITLE'] %></h1>
            <div class="col-xs-10 col-md-10 col-xs-offset-1 col-md-offset-1 minus-padding">
                <div class="login text-center" id="card">
                    <div class="front signin_form">
                        <p>Register with a new account</p>
                        <form class="login-form" id="loginForm" action="/myProfile" method="get">
                            <div class="form-group col-sm-6 col-xs-12">
                                <div class="input-group input-relative">
                                    <input type="text" class="form-control border-dark"
                                           placeholder="Full name" name="fullName" id="fullName" autocomplete="off">
                                    <span class="input-group-addon border-dark-addon">
                                        <i class="glyphicon glyphicon-user"></i>
                                    </span>
                                </div>
                                <div class="input-group input-relative">
                                    <input type="text" class="form-control border-dark"
                                           placeholder="Email" name="email" id="email" autocomplete="off">
                                    <span class="input-group-addon border-dark-addon">
                                        <i class="glyphicon glyphicon-envelope"></i>
                                    </span>
                                </div>
                                <div class="input-group input-relative select-gender">
                                    <select name="gender" class="selectpicker" id="gender">
                                        <option value="Gender">Gender</option>
                                        <option value="male">Male</option>
                                        <option value="female">Female</option>
                                    </select>
                                    <span class="input-group-addon border-dark-addon">
                                        <i class="fa fa-venus-mars"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group col-sm-6 col-xs-12">
                                <div class="input-group input-relative">
                                    <input type="password" class="form-control border-dark"
                                           placeholder="Password" name="password" id="password" autocomplete="off">
                                    <span class="input-group-addon border-dark-addon">
                                        <i class="glyphicon glyphicon-lock"></i>
                                    </span>
                                </div>
                                <div class="input-group input-relative">
                                    <input type="password" class="form-control border-dark"
                                           placeholder="Repeat password" name="rePassword" id="rePassword"
                                           autocomplete="off">
                                    <span class="input-group-addon border-dark-addon">
                                        <i class="glyphicon glyphicon-lock"></i>
                                    </span>
                                </div>
                                <div class="input-group input-relative">
                                    <div class="col-xs-4 select-date select-year">
                                        <select name="year" class="selectpicker" id="year">
                                            <option value="0">Year</option>
                                        </select>
                                    </div>
                                    <div class="col-xs-5 select-date select-month">
                                        <select name="month" class="selectpicker" id="month">
                                            <option value="0">Month</option>
                                        </select>
                                    </div>
                                    <div class="col-xs-3 select-date select-day">
                                        <select name="day" class="selectpicker" id="day">
                                            <option value="0">Day</option>
                                        </select>
                                    </div>
                                    <p class="error-date"></p>
                                </div>
                            </div>
                            <div class="form-group sign-btn col-xs-12">
                                <input type="submit" class="btn" value="Sing in" id="submitBtn">
                                <p class="sign-up">
                                    <a href="/" id="flip-btn" class="signup signup_link pull-right">
                                        Log in
                                    </a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

<% include ./layout/partials/footer.ejs %>
