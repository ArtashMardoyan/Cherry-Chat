<% include ./layout/partials/header.ejs %>

<main class="profile-screen">
    <div class="profile-center">
        <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3
         col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1 min-height">
            <form action="" class="login-form" id="loginForm">
                <div class="col-md-4 col-md-offset-4 col-xs-6 col-xs-offset-3">
                    <div class="avatar" id="avatar"></div>
                    <div class="col-md-4 col-md-offset-3 col-xs-4 col-xs-offset-4 div-icon">
                    <span class="select-wrapper">
                       <input type="file" name="imageSrc" class="imageSrc" id="imageSrc">
                    </span>
                    </div>
                </div>
                <div class="col-xs-12 description-data">
                    <p>Profile detalis</p>
                </div>
                <div class="profile-data">
                    <div class="col-md-4 col-xs-12">
                        <div class="profile-data-name">Full name:</div>
                    </div>
                    <div class="col-md-8 col-xs-12">
                        <div class="input-group">
                            <input type="text" class="form-control profile-data-value" autocomplete="off"
                                   name="fullName" id="fullName" disabled>
                            <span class="input-group-addon profile-data-value-addon">
                                <i class="glyphicon glyphicon-pencil" id="editFullName"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="profile-data">
                    <div class="col-md-4 col-xs-12">
                        <div class="profile-data-name">Email:</div>
                    </div>
                    <div class="col-md-8 col-xs-12">
                        <div class="input-group">
                            <input type="text" class="form-control profile-data-value" autocomplete="off"
                                   name="email" id="email" disabled>
                            <span class="input-group-addon profile-data-value-addon">
                                <i class="glyphicon glyphicon-pencil" id="editEmail"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="profile-data">
                    <div class="col-md-4 col-xs-12">
                        <div class="profile-data-name">Gender:</div>
                    </div>
                    <div class="col-md-8 col-xs-12">
                        <div class="input-group input-relative select-gender">
                            <select name="gender" class="selectpicker" id="gender">
                                <option value="Gender">Gender</option>
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                            </select>
                            <span class="input-group-addon profile-data-value-addon">
                                <i class="fa fa-venus-mars"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="profile-data">
                    <div class="col-md-4 col-xs-12">
                        <div class="profile-data-name">Date of birth:</div>
                    </div>
                    <div class="col-md-8 col-xs-12">
                        <div class="input-group input-relative">
                            <div class="col-xs-4 select-date select-year">
                                <select name="year" class="selectpicker" id="year">
                                    <option value="0">Year</option>
                                </select>
                            </div>
                            <div class="col-xs-5 select-date select-month">
                                <select name="month" class="selectpicker" id="month">
                                    <option value="0">Month</option>
                                </select>
                            </div>
                            <div class="col-xs-3 select-date select-day">
                                <select name="day" class="selectpicker" id="day">
                                </select>
                            </div>
                            <p class="error-date"></p>
                        </div>
                    </div>
                </div>
                <div class="profile-data">
                    <div class="col-xs-12 div-change-password">
                        <span class="change-password" data-toggle="modal" data-target="#myModal">
                            Change Password
                        </span>
                    </div>
                </div>
                <div class="col-lg-offset-8 col-lg-4 col-md-offset-8 col-md-4 col-xs-offset-4 col-xs-4 div-profile-btn">
                    <input type="submit" class="btn profile-btn" value="Go to Chat">
                </div>
            </form>
            <form action="" class="change-password-form" id="changePasswordForm">
                <div class="div-change-password2">
                    <div id="myModal" class="modal fade" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="title-modal">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Change Password</h4>
                                </div>
                                <div class="body-modal">
                                    <div class="profile-data">
                                        <div class="col-md-5 col-sm-5 col-xs-12">
                                            <div class="profile-data-name">Current Password:</div>
                                        </div>
                                        <div class="col-md-7 col-sm-7 col-xs-12 input-contain">
                                            <div class="input-group">
                                                <input type="password" class="form-control edit-password"
                                                       name="currentPassword" id="currentPassword"
                                                       placeholder="current password">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="profile-data">
                                        <div class="col-md-5 col-sm-5 col-xs-12">
                                            <div class="profile-data-name">New Password:</div>
                                        </div>
                                        <div class="col-md-7 col-sm-7 col-xs-12 input-contain">
                                            <div class="input-group">
                                                <input type="password" class="form-control edit-password"
                                                       name="password" id="password"
                                                       placeholder="New password">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="profile-data">
                                        <div class="col-md-5 col-sm-5 col-xs-12">
                                            <div class="profile-data-name">Confirm Password:</div>
                                        </div>
                                        <div class="col-md-7 col-sm-7 col-xs-12 input-contain">
                                            <div class="input-group">
                                                <input type="password" class="form-control edit-password"
                                                       name="rePassword" id="rePassword"
                                                       placeholder="Confirm password">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="footer-modal">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">
                                        Close
                                    </button>
                                    <input type="submit" class="btn btn-success" id="save" value="save">
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <% include ./layout/partials/copyRight.ejs %>
</main>
<% include ./layout/partials/script.ejs %>

<script src="/bower_components/bootstrap-select/js/bootstrap-select.js"></script>
<script type="text/javascript" src="/js/date.js"></script>
<script type="text/javascript" src="/js/form.js"></script>
<script type="text/javascript" src="/js/profile.js"></script>

<% include ./layout/partials/footer.ejs %>
